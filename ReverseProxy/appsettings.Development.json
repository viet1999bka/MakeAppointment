{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "users-route": {
        "ClusterId": "authentication-cluster",
        "Match": {
          "Path": "authentication/{**catch-all}"
        },
        "Transforms": [ { "PathPattern": "{**catch-all}" } ]
      },
      "employees-route": {
        "ClusterId": "employees-cluster",
        "Match": {
          "Path": "employee/{**catch-all}"
        },
        "Transforms": [ { "PathPattern": "{**catch-all}" } ]
      },
      "attendance-route": {
        "ClusterId": "attendance-cluster",
        "Match": {
          "Path": "attendance/{**catch-all}"
        },
        "Transforms": [ { "PathPattern": "{**catch-all}" } ]
      }
    },
    "Clusters": {
      "authentication-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:7180/"
          }
        }
      },
      "attendance-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:7217/"
          }
        }
      },
      "employees-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:7072/"
          }
        }
      }
    }
  }
}
